{
	"compilerOptions": {
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@lexer/*": ["src/lexer/*"],
			"@lexer": ["src/lexer/"],
			"@ast/*": ["src/ast/*"],
			"@ast": ["src/ast/"],
			"@tests/*": ["tests/*"],
			"@tools/*": ["tools/*"]
		},
		"lib": ["ESNext"],
		"target": "ESNext",
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"moduleResolution": "bundler"
	},
	"exclude": ["dist", "node_modules", "src/**/*.test.ts"]
}
