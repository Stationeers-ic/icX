{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.js": {"when": "$(basename).ts"},
    "**/*.d.ts": {"when": "$(basename).ts"},
    "**/*.js.map": { "when": "$(basename)" },
    "**/node_modules": true,
    ".idea": true,
    ".github": true,
  },
}
